extends layout

block content
    .container
        if games && games.length
            each game in games
                a(href=`/game/${game.uuid}`) 
                    .column
                        .savedGames
                            img(src="/brand/TdA_Logo/PNG/TdA_LOGO_bily.png", width="60", height="60")
                            h2= game.name
                            p
                                b Obtížnost:
  
                                if game.difficulty == "beginner"
                                    img(src="/brand/TdA_Ikonky/PNG/Beginner/zarivka_beginner_bile.png", width="40", height="40")
                                    p Začátečník

                                else if game.difficulty == "easy"
                                    img(src="/brand/TdA_Ikonky/PNG/Easy/zarivka_easy_bile.png", width="40", height="40")
                                    p Lehká

                                else if game.difficulty == "medium"
                                    img(src="/brand/TdA_Ikonky/PNG/Medium/zarivka_medium_bile.png", width="40", height="40")
                                    p Střední

                                else if game.difficulty == "hard"
                                    img(src="/brand/TdA_Ikonky/PNG/Hard/zarivka_hard_bile.png", widht="40",height="40")
                                    p Těžká

                                else if game.difficulty == "extreme"
                                    img(src="/brand/TdA_Ikonky/PNG/Extreme/zarivka_extreme_bile.png", width="40", height="40")
                                    p Extrémně těžká
                            p
                                b Stav hry:
                                if game.gameState == "opening"
                                    p Začátek
                                else if game.gameState == "midgame"
                                    p Probíhá
                                else if game.gameState == "endgame"
                                    p Koncovka
                                else
                                    p neznámý stav

                            p
                                b Vytvořeno:
                                    p #{formatDate(game.createdAt)}
                            p
                                b Naposledy upraveno:
                                if  game.updated_at
                                    p #{formatDate(game.updatedAt)}
                                else
                                    p #{formatDate(game.createdAt)}
    .game_container
        .column
           
                 img(src="/brand/TdA_Ikonky/PNG/X/X_cervene.png", alt="", width="60", height="60")
        .column
            h2 Herní plocha
            .game_board#gameBoard
                each record in board
                    .row
                        each cell in record
                            .cell= cell
            p.card#book0(style="cursor:pointer") Uložit hru
    .modal#0
        .modal-content
            form.form(name="arg")
            label(for="name") Název hry: &nbsp;
            input(type="text", name="name1", placeholder="Hráč 1")
            p vs
            input(type="text", name="name2", placeholder="Hráč 2")
            br
            br
            label(for="diff") 
                b Obtížnost: &nbsp;
            select(name="diffic")
                option(value="1") Začátečník
                option(value="2") Snadná
                option(value="3") Střední
                option(value="4") Těžká
                option(value="5") Extrémně těžká
            br   
            br
            button(type="button", id="save") Uložit
            br
            br
            button.close-btn#closeModal0 Zavřít
   
        .column 
               img(src="/brand/TdA_Ikonky/PNG/O/O_modre.png", alt="", width="60", height="60")


    